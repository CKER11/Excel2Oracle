            File.WriteAllText(connectInfoPath, string.Format("<?xml version=\"1.0\" encoding=\"utf-8\" ?><Config  connectInfo = \"{0}\" />", txtDBConnectInfo.Text.Trim()));
            if (File.Exists(connectInfoPath))
            {
                MessageBox.Show("保存成功");
            }

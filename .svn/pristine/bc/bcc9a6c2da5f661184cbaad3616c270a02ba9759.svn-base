<Window x:Class="Excel2Oracle.OrclConfig"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Excel2Oracle"
        mc:Ignorable="d"
        Title="数据库配置"
        Height="235.252"
        Width="437.05"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        >
    <Grid Height="215"
          VerticalAlignment="Top">
        <Button x:Name="btnSaveConnect"
                Content="保存"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Width="48"
                Click="SaveConnection"
                Height="22"
                Margin="0,0,95,31" />
        <Button x:Name="btnTestDBConnect"
                Content="测试"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Width="50"
                Click="TestDBConnect"
                RenderTransformOrigin="-1.806,0.159"
                Height="22"
                Margin="0,0,166,31" />
        <Label x:Name="label"
               Content="用户名（UserID）"
               HorizontalAlignment="Left"
               Margin="27,10,0,0"
               VerticalAlignment="Top" />
        <Label x:Name="label_Copy"
               Content="密码（Password）"
               HorizontalAlignment="Left"
               Margin="27,39,0,0"
               VerticalAlignment="Top" />
        <Label x:Name="label_Copy1"
               Content="数据库IP（HOST）"
               HorizontalAlignment="Left"
               Margin="27,65,0,0"
               VerticalAlignment="Top" />
        <Label x:Name="label_Copy2"
               Content="数据库端口（PORT）"
               HorizontalAlignment="Left"
               Margin="27,93,0,0"
               VerticalAlignment="Top" />
        <Label x:Name="label_Copy3"
               Content="数据库实例名（SERVICE_NAME）"
               HorizontalAlignment="Left"
               Margin="27,119,0,0"
               VerticalAlignment="Top" />
        <TextBox x:Name="txtUserID"
                 HorizontalAlignment="Left"
                 Height="23"
                 Margin="166,12,0,0"
                 TextWrapping="Wrap"
                 Text=""
                 VerticalAlignment="Top"
                 Width="241"
                 TextChanged="txtUserID_TextChanged"/>
        <TextBox x:Name="txtServiceName"
                 TextChanged="txtServiceName_TextChanged"
                 HorizontalAlignment="Left"
                 Height="23"
                 Margin="222,120,0,0"
                 TextWrapping="Wrap"
                 Text=""
                 VerticalAlignment="Top"
                 Width="185" />
        <TextBox x:Name="txtHost"
                 TextChanged="txtHost_TextChanged"
                 HorizontalAlignment="Left"
                 Height="23"
                 Margin="166,66,0,0"
                 TextWrapping="Wrap"
                 Text=""
                 VerticalAlignment="Top"
                 Width="241" />
        <TextBox x:Name="txtPassword"
                 HorizontalAlignment="Left"
                 Height="23"
                 Margin="166,39,0,0"
                 TextWrapping="Wrap"
                 Text=""
                 VerticalAlignment="Top"
                 Width="241" 
                 TextChanged="txtPassword_TextChanged"/>
        <TextBox x:Name="txtPort"
                 HorizontalAlignment="Left"
                 Height="23"
                 Margin="166,94,0,0"
                 TextWrapping="Wrap"
                 Text=""
                 VerticalAlignment="Top"
                 Width="241" 
                 TextChanged="txtPort_TextChanged"/>
        <Button x:Name="btnCancel"
                Content="取消"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Width="50"
                Click="btnCancel_Click"
                Height="22"
                Margin="0,0,24,31" />

    </Grid>
</Window>
